<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/site_details_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/siteNameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/site_name_icon"
                        android:src="@drawable/ic_site_name" />

                    <TextView
                        android:id="@+id/siteNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Site Name"
                        android:textAppearance="?attr/textAppearanceHeadline6" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/siteAddressLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/site_address_icon"
                        android:src="@drawable/ic_location" />

                    <TextView
                        android:id="@+id/siteAddressTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Site Address"
                        android:textAppearance="?attr/textAppearanceBody1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/siteStartEndDateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/site_start_end_date_icon"
                        android:src="@drawable/ic_calendar" />

                    <TextView
                        android:id="@+id/siteStartEndDateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Date - End Date"
                        android:textAppearance="?attr/textAppearanceBody1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/siteHoursLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/site_hours_icon"
                        android:src="@drawable/ic_time" />

                    <TextView
                        android:id="@+id/siteHoursTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Donation Hours"
                        android:textAppearance="?attr/textAppearanceBody1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/siteDaysLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/site_days_icon"
                        android:src="@drawable/ic_calendar" />

                    <TextView
                        android:id="@+id/siteDaysTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Operating Days"
                        android:textAppearance="?attr/textAppearanceBody1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/requiredBloodTypesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/required_blood_types_icon"
                        android:src="@drawable/ic_blood_type" />

                    <TextView
                        android:id="@+id/requiredBloodTypesTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Required Blood Types"
                        android:textAppearance="?attr/textAppearanceBody1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buttonLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">
                    <!-- Buttons will be added here dynamically -->
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>